[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform sampler2D stripes_tex : hint_albedo;
uniform vec2 scroll_speed = vec2(0.5, 0.0);
uniform vec2 texture_scale = vec2(1.0, 1.0);

void fragment() {
    vec2 uv = UV * texture_scale + scroll_speed * TIME;

    vec4 tex = texture(stripes_tex, uv);
    COLOR = tex * COLOR;
}
"
